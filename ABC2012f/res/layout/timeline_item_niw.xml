<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/contentWrapper">

    <ImageView
        android:id="@+id/icon"
        style="@style/contentIcon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:src="@drawable/tl_icon_niw" />

    <TextView
        android:id="@+id/username"
        style="@style/contentName"
        android:layout_alignTop="@+id/icon"
        android:layout_toRightOf="@+id/icon"
        android:text="Yoshimasa Niwa" />

    <TextView
        style="@style/contentNickname"
        android:layout_alignBottom="@+id/username"
        android:layout_toRightOf="@+id/username"
        android:text=" @niw" />

    <TextView
        style="@style/contentDate"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:text="14h" />

    <TextView
        android:id="@+id/tweet"
        style="@style/contentBody"
        android:layout_alignLeft="@+id/username"
        android:layout_below="@+id/username"
        android:text="Xcode is eating all my CPU power." />
